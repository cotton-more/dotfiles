[user]
    name = Ivan Nikulin
    email = vansanblch@gmail.com

[core]
    editor = vim
    whitespace = cr-at-eol

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[alias]
    co = checkout

    branches = branch -a
    remotes = remote -v

    ci = commit
    cm = commit -m

    st = status -sb
    stat = status
    ls = log --pretty=format:"%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]" --decorate --date=short
    standup = log --since '1 day ago' --oneline --author <vansanblch@gmail.com>
    graph = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
    # jwiegley/git-scripts
    tree = !git-forest --pretty=format:\"%C(red)%h %C(magenta)(%ar) %C(blue)%an %C(reset)%s\" --style=1 --reverse

    d = !git diff | vim -R -
    di = !git diff --cached | vim -R -
    dif = diff

    unstage = reset HEAD
    uns = reset HEAD

[merge]
tool = Gdiff

[mergetool "splice"]
cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
trustExitCode = true

[mergetool "Gdiff"]
cmd = "vim $MERGED -c 'Gdiff'"

[url "https://"]
	insteadOf = git://
